        <button id="boton-jugar-snake">Jugar Snake</button>
        <div id="puntuacion" style="display:none;font-size:1.5em;color:#00FFFF;">Puntuación: <span id="score">0</span></div>

        <canvas id="area-juego-snake" width="400" height="400" style="display:none;"></canvas>
        <img id="logo-tecnostore-comida" src="TecnoStore.jpg" style="display:none;">
    </div>

    <div class="joystick-container" id="joystick-container">
        <div class="joystick-row"><div class="joystick-button" id="up-button"><i class="fas fa-arrow-up"></i></div></div>
        <div class="joystick-row">
            <div class="joystick-button" id="left-button"><i class="fas fa-arrow-left"></i></div>
            <div class="joystick-button" style="opacity:0;"></div>
            <div class="joystick-button" id="right-button"><i class="fas fa-arrow-right"></i></div>
        </div>
        <div class="joystick-row"><div class="joystick-button" id="down-button"><i class="fas fa-arrow-down"></i></div></div>
    </div>

<script>
    const canvas=document.getElementById('area-juego-snake');
    const ctx=canvas.getContext('2d');
    const boton=document.getElementById('boton-jugar-snake');
    const scoreSpan=document.getElementById('score');
    const puntuacionDiv=document.getElementById('puntuacion');
    const logo=document.getElementById('logo-tecnostore-comida');
    const joystick=document.getElementById('joystick-container');
    const up=document.getElementById('up-button');
    const down=document.getElementById('down-button');
    const left=document.getElementById('left-button');
    const right=document.getElementById('right-button');

    let tile=20;
    let grid=canvas.width/tile;
    let snake=[];
    let food={};
    let dx=0,dy=0;
    let loop;
    let score=0;
    let playing=false;

    boton.onclick=startGame;
    document.addEventListener('keydown',keyDir);
    up.onclick=()=>manualDir('up');
    down.onclick=()=>manualDir('down');
    left.onclick=()=>manualDir('left');
    right.onclick=()=>manualDir('right');

    function startGame(){
        if(playing) return;
        playing=true;
        boton.style.display='none';
        canvas.style.display='block';
        puntuacionDiv.style.display='block';
        if(window.innerWidth<768) joystick.classList.add('active');

        score=0; scoreSpan.textContent=score;
        snake=[{x:10,y:10}];
        dx=1; dy=0;

        newFood();
        if(loop) clearInterval(loop);
        loop=setInterval(update,150);
    }

    function newFood(){
        food={x:Math.floor(Math.random()*grid),y:Math.floor(Math.random()*grid)};
        if(snake.some(s=>s.x===food.x&&s.y===food.y)) newFood();
    }

    function update(){
        let head={x:snake[0].x+dx,y:snake[0].y+dy};

        if(head.x<0) head.x=grid-1;
        if(head.x>=grid) head.x=0;
        if(head.y<0) head.y=grid-1;
        if(head.y>=grid) head.y=0;

        if(snake.slice(1).some(s=>s.x===head.x&&s.y===head.y)) return gameOver();

        snake.unshift(head);

        if(head.x===food.x&&head.y===food.y){
            score++; scoreSpan.textContent=score;
            newFood();
        } else snake.pop();

        draw();
    }

    function draw(){
        ctx.fillStyle='rgba(0,0,0,0.8)';
        ctx.fillRect(0,0,canvas.width,canvas.height);

        ctx.fillStyle='#00FF00';
        snake.forEach(s=>ctx.fillRect(s.x*tile,s.y*tile,tile,tile));

        if(logo.complete && logo.naturalWidth>0)
            ctx.drawImage(logo,food.x*tile,food.y*tile,tile,tile);
        else{
            ctx.fillStyle='cyan';
            ctx.fillRect(food.x*tile,food.y*tile,tile,tile);
        }
    }

    function keyDir(e){
        if(!playing)return;
        if(e.keyCode===37&&dx===0){dx=-1;dy=0;}
        if(e.keyCode===38&&dy===0){dx=0;dy=-1;}
        if(e.keyCode===39&&dx===0){dx=1;dy=0;}
        if(e.keyCode===40&&dy===0){dx=0;dy=1;}
    }

    function manualDir(dir){
        if(!playing)return;
        if(dir==='left' && dx===0){dx=-1;dy=0;}
        if(dir==='up' && dy===0){dx=0;dy=-1;}
        if(dir==='right' && dx===0){dx=1;dy=0;}
        if(dir==='down' && dy===0){dx=0;dy=1;}
    }

    function gameOver(){
        clearInterval(loop);
        playing=false;
        alert("¡Fin del juego! Puntuación: "+score);
        canvas.style.display='none';
        puntuacionDiv.style.display='none';
        boton.style.display='block';
        boton.textContent='Volver a Jugar';
        joystick.classList.remove('active');
    }
</script>

</body>
</html>
